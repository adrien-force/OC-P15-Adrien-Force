{% extends 'front.html.twig' %}

{% block front %}
    <div class="row">
        <div class="col-12">
            <h3 class="mb-4">Portfolio</h3>
            <div class="mb-5 position-relative">
                <div class="d-flex">
                    <div class="col-2">
                        <a class="btn w-100 py-3 {{ album is null ? 'active' }}" href="{{ path('portfolio') }}">
                            Toutes
                        </a>
                    </div>
                    <div class="album-slider-container position-relative" style="width: 83.33%; overflow-x: hidden;">
                        <div class="album-slider d-flex" style="transition: transform 0.3s ease;">
                            {% for a in albums %}
                                <div class="col-2 flex-shrink-0">
                                    <a class="btn w-100 py-3 {{ album == a ? 'active' }}" href="{{ path('portfolio', {id: a.id}) }}">
                                        {{ a.name }}
                                    </a>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                {% if albums|length > 5 %}
                <div class="d-flex justify-content-between mt-3">
                    <div>
                        <button class="album-nav-prev btn" style="z-index: 10; display: none;">
                            <i class="bi bi-chevron-left"></i> Précédent
                        </button>
                    </div>
                    <div>
                        <button class="album-nav-next btn" style="z-index: 10;">
                            Suivant <i class="bi bi-chevron-right"></i>
                        </button>
                    </div>
                </div>
                {% endif %}
            </div>

            <div class="row">
                {% if medias|length > 0 %}
                    {% for media in medias %}
                        <div class="col-4 media mb-4">
                            <img loading="lazy" class="w-100" src="{{ asset(media.path) }}" alt="{{ media.title }}">
                            <p class="text-center mb-0 mt-2 media-title">{{ media.title }}</p>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="alert alert-info my-5 text-center">
                        <div class="d-flex align-items-center justify-content-center">
                            <i class="bi bi-info-circle-fill me-3 fs-3"></i>
                            <div>
                                <h4 class="alert-heading">Aucun résultat</h4>
                                <p class="mb-0">
                                    Aucun média n'a été trouvé dans cet album.
                                </p>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>

            {% set totalPages = max(1, (total / limit)|round(0, 'ceil')) %}

            {% if totalPages > 1 %}
                <nav aria-label="Page navigation" class="mt-5">
                    <div class="d-flex justify-content-between align-items-center">
                        <ul class="pagination">
                            {% if page > 1 %}
                                <li class="page-item">
                                    <a class="btn" href="{{ path('portfolio', {id: album ? album.id : null, page: page - 1, limit: limit}) }}">Précédent</a>
                                </li>
                            {% endif %}

                            {% for i in range(max(1, page - 2), min(totalPages, page + 2)) %}
                                <li class="page-item {% if i == page %}custom_active{% endif %}">
                                    <a class="btn" href="{{ path('portfolio', {id: album ? album.id : null, page: i, limit: limit}) }}">{{ i }}</a>
                                </li>
                            {% endfor %}

                            {% if page < totalPages %}
                                <li class="page-item">
                                    <a class="btn" href="{{ path('portfolio', {id: album ? album.id : null, page: page + 1, limit: limit}) }}">Suivant</a>
                                </li>
                            {% endif %}
                        </ul>
                        <div>
                            <form class="d-flex align-items-center" method="get" action="{{ path('portfolio', {id: album ? album.id : null}) }}">
                                <label for="limit" class="me-2 text-nowrap">Éléments par page:</label>
                                <div class="d-inline-block position-relative">
                                    <select class="form-select form-control border border-dark rounded-0"
                                            style="background-color: transparent; font-family: 'DM Sans', sans-serif; font-size: 14px;"
                                            id="limit"
                                            name="limit"
                                            onchange="this.form.submit()">
                                        {% for option in [9, 15, 24, 36] %}
                                            <option value="{{ option }}" {% if limit == option %}selected{% endif %}>{{ option }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                {% if page > 1 %}
                                    <input type="hidden" name="page" value="{{ page }}">
                                {% endif %}
                            </form>
                        </div>
                    </div>
                </nav>
            {% endif %}
        </div>
    </div>

    {% if albums|length > 5 %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const slider = document.querySelector('.album-slider');
            const sliderContainer = document.querySelector('.album-slider-container');
            const prevBtn = document.querySelector('.album-nav-prev');
            const nextBtn = document.querySelector('.album-nav-next');
            const itemWidth = document.querySelector('.album-slider .col-2').offsetWidth;
            let currentPosition = 0;
            const maxPosition = (slider.children.length - 5) * itemWidth;

            updateNavButtons();

            prevBtn.addEventListener('click', function() {
                currentPosition = Math.max(0, currentPosition - itemWidth);
                updateSliderPosition();
            });

            nextBtn.addEventListener('click', function() {
                currentPosition = Math.min(maxPosition, currentPosition + itemWidth);
                updateSliderPosition();
            });

            sliderContainer.addEventListener('wheel', function(e) {
                e.preventDefault();

                if (e.deltaX > 0 || e.deltaY > 0) {
                    currentPosition = Math.min(maxPosition, currentPosition + itemWidth);
                } else {
                    currentPosition = Math.max(0, currentPosition - itemWidth);
                }

                updateSliderPosition();
            }, { passive: false });

            function updateSliderPosition() {
                slider.style.transform = `translateX(-${currentPosition}px)`;
                updateNavButtons();
            }

            function updateNavButtons() {
                prevBtn.style.display = currentPosition > 0 ? 'block' : 'none';
                nextBtn.style.display = currentPosition < maxPosition ? 'block' : 'none';
            }

            let touchStartX = 0;
            let touchEndX = 0;

            slider.addEventListener('touchstart', function(e) {
                touchStartX = e.changedTouches[0].screenX;
            }, { passive: true });

            slider.addEventListener('touchend', function(e) {
                touchEndX = e.changedTouches[0].screenX;
                handleSwipe();
            }, { passive: true });

            function handleSwipe() {
                const difference = touchStartX - touchEndX;
                if (difference > 50) {
                    currentPosition = Math.min(maxPosition, currentPosition + itemWidth);
                } else if (difference < -50) {
                    currentPosition = Math.max(0, currentPosition - itemWidth);
                }
                updateSliderPosition();
            }

            let isDragging = false;
            let startPosition = 0;
            let startX = 0;

            slider.addEventListener('mousedown', function(e) {
                isDragging = true;
                startPosition = currentPosition;
                startX = e.clientX;
                slider.style.transition = 'none';
                e.preventDefault();
            });

            document.addEventListener('mousemove', function(e) {
                if (!isDragging) return;
                const diff = startX - e.clientX;
                const newPosition = Math.max(0, Math.min(maxPosition, startPosition + diff));
                slider.style.transform = `translateX(-${newPosition}px)`;
            });

            document.addEventListener('mouseup', function(e) {
                if (!isDragging) return;
                isDragging = false;
                slider.style.transition = 'transform 0.3s ease';

                const diff = startX - e.clientX;
                if (Math.abs(diff) > 50) {
                    if (diff > 0) {
                        currentPosition = Math.min(maxPosition, startPosition + itemWidth);
                    } else {
                        currentPosition = Math.max(0, startPosition - itemWidth);
                    }
                } else {
                        currentPosition = Math.round(currentPosition / itemWidth) * itemWidth;
                }
                updateSliderPosition();
            });
        });
    </script>
    {% endif %}
{% endblock %}
