{% extends 'admin.html.twig' %}

{% block admin %}
    <div class="d-flex justify-content-between row min-vh-100">
    <div>
    <div class="d-flex justify-content-between align-items-center position-sticky top-0 bg-blur p-4 bg-white">
        <h1>Medias</h1>
        <a href="{{ path('admin_media_add') }}" class="btn btn-primary">Ajouter</a>
    </div>
    <table class="table table-hover table-responsive">
        <thead>
            <tr>
                <th>Image</th>
                <th>Titre</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th>Artiste</th>
                    <th>Album</th>
                {% endif %}
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for media in medias %}
                <tr>
                    <td>
                        <button type="button" class="btn p-0 image-preview-btn"
                               data-bs-toggle="modal"
                               data-bs-target="#imageModal"
                               data-image-src="{{ asset(media.path) }}"
                               data-image-title="{{ media.title }}">
                            <img src="{{ asset(media.path) }}" width="75" alt="{{ media.title }}" />
                        </button>
                    </td>
                    <td>{{ media.title }}</td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td>{{ media.user ? media.album.name : 'N/A' }}</td>
                        <td>{{ media.album ? media.album.name : 'N/A' }}</td>
                    {% endif %}
                    <td>
                        <a href="{{ path('admin_media_delete', {id: media.id}) }}" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% set totalPages = (total / limit)|round(0, 'ceil') %}
    </div>

    {% include 'components/image_modal.html.twig' %}

    <nav aria-label="Page navigation" class="position-sticky bottom-0 mt-auto">
        <div class="d-flex justify-content-between align-items-center">
            <ul class="pagination">
                {% if page > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('admin_media_index', {page: 1, limit: limit}) }}">Première page</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="{{ path('admin_media_index', {page: page - 1, limit: limit}) }}">Précédent</a>
                    </li>
                {% endif %}

                {% for i in range(max(1, page - 3), min(totalPages, page + 3)) %}
                    <li class="page-item {% if i == page %}active{% endif %}">
                        <a class="page-link" href="{{ path('admin_media_index', {page: i, limit: limit}) }}">{{ i }}</a>
                    </li>
                {% endfor %}

                {% if page < totalPages %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('admin_media_index', {page: page + 1, limit: limit}) }}">Suivant</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="{{ path('admin_media_index', {page: totalPages, limit: limit}) }}">Dernière page</a>
                    </li>
                {% endif %}
            </ul>
            <div>
                <form class="d-flex align-items-center" method="get" action="{{ path('admin_media_index') }}">
                    <label for="limit" class="me-2 text-nowrap">Éléments par page:</label>
                    <select class="form-select form-select-sm" id="limit" name="limit" onchange="this.form.submit()">
                        {% for option in [5, 10, 15, 25, 50, 100] %}
                            <option value="{{ option }}" {% if limit == option %}selected{% endif %}>{{ option }}</option>
                        {% endfor %}
                    </select>
                    {% if page > 1 %}
                        <input type="hidden" name="page" value="{{ page }}">
                    {% endif %}
                </form>
            </div>
        </div>
    </nav>
    </div>
{% endblock %}
